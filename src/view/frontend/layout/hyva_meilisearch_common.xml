<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header-content">
            <block name="header-search" template="Walkwizus_MeilisearchFrontend::html/header/search-form.phtml"/>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block name="meilisearch.frontend.init" template="Hyva_WalkwizusMeilisearch::init.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Hyva\WalkwizusMeilisearch\ViewModel\InitJs</argument>
                </arguments>
            </block>
            <block name="meilisearch.frontend.alpine.store" template="Hyva_WalkwizusMeilisearch::alpine-store.phtml"/>
        </referenceContainer>
    </body>
</page>
