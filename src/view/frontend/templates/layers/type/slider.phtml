<template x-if="facet.type === 'price'">
    <div class="w-full max-w-md mx-auto p-6" x-data="msPriceSlider(facet)">

        <div class="relative h-2 mb-8">
            <div class="absolute inset-0 bg-gray-200 rounded-full"></div>
            <div class="absolute h-full bg-blue-500 rounded-full"
                 :style="`left: ${((min - minLimit) / (maxLimit - minLimit)) * 100}%;
                          right: ${100 - ((max - minLimit) / (maxLimit - minLimit)) * 100}%`"
            ></div>

            <input type="range" x-model.number="min" :min="minLimit" :max="maxLimit"
                   @input="min = Math.min(min, max)" @change="apply()"
                   class="range-input">

            <input type="range" x-model.number="max" :min="minLimit" :max="maxLimit"
                   @input="max = Math.max(max, min)" @change="apply()"
                   class="range-input">
        </div>

        <div class="flex flex-col items-center gap-3">
            <div class="inline-flex items-center px-4 py-2 bg-white border border-gray-200 rounded-full shadow-sm ring-1 ring-black/5">
                <span class="text-sm font-bold text-gray-900" x-text="format(min)"></span>
                <span class="mx-3 text-gray-300 font-light text-lg">|</span>
                <span class="text-sm font-bold text-gray-900" x-text="format(max)"></span>
            </div>
            <template x-if="totalCount > 0">
                <div class="text-[11px] uppercase tracking-wider text-gray-400 font-semibold"
                     x-text="`${totalCount} ${totalCount > 1 ? '<?= __('products') ?>' : '<?= __('product') ?>'}`">
                </div>
            </template>
        </div>
    </div>
</template>
